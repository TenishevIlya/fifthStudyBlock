<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize yswour theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable</item>
    </style>

    <style name="progressColor" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/progress_bar</item>
    </style>

    <style name="greyBackground">
        <item name="android:windowBackground">@drawable/rectanglecolor</item>
    </style>

    <style name="switchColor" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/switch_color</item>
    </style>

    <style name="lineColor" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/switch_color</item>
    </style>
</resources>
