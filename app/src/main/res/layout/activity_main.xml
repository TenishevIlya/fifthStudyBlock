<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/wannaHelpWidth"
        android:layout_height="@dimen/wannaHelpHeight"
        android:layout_marginStart="@dimen/wannaHelpLeftMarg"
        android:layout_marginTop="@dimen/wannaHelpTopMarg"
        android:layout_marginEnd="@dimen/wannaHelpRightMarg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_logo" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/progBarWidth"
        android:layout_height="@dimen/wannaHelpHeight"
        android:layout_marginStart="@dimen/progBarLeftMarg"
        android:layout_marginTop="@dimen/progBarTopMarg"
        android:layout_marginEnd="@dimen/progBarRightMarg"
        android:theme="@style/progressColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/loadTextWidth"
        android:layout_height="@dimen/loadTextHeight"
        android:layout_marginStart="@dimen/loadTextLeftMarg"
        android:layout_marginTop="@dimen/loadTextTopMarg"
        android:layout_marginEnd="@dimen/loadTextRigthMarg"
        android:text="@string/loadingText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/simbirImgLeftMarg"
        android:layout_marginTop="@dimen/simbirImgTopMarg"
        android:layout_marginEnd="@dimen/simbirImgRightMarg"
        android:layout_marginBottom="@dimen/simbirImgBotMarg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@mipmap/logo" />
</android.support.constraint.ConstraintLayout>